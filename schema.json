{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SeguirConfigurationFile",
  "description": "Seguir configuration file schema.",
  "type": "object",
  "properties": {
    "checkpointDirectory": {
      "type": "string",
      "description": "Directory under which to store checkpoint statistics.",
      "patternProperties": {
        "^(/[^/]+)+$": {}
      }
    },
    "checkpointFrequency": {
      "type": "integer",
      "description": "Rate, in seconds, at which to output checkpoint statistics.",
      "minimum": 0
    },
    "files": {
      "type": "array",
      "description": "List of watched files.",
      "items": {
        "type": "string",
        "patternProperties": {
          "^(/[^/]+)+$": {}
        }
      }
    },
    "offset": {
      "type": "integer",
      "description": "File start offset. If checkpoint file already exists this option will be ignored.",
      "minimum": 0
    },
    "outputs": {
      "type": "array",
      "properties": {
        "module": {
          "type": "string"
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
